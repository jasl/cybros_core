<header class="c-header c-header-light c-header-fixed">
  <% if has_sidebar? %>
    <button class="c-header-toggler c-class-toggler d-lg-none" type="button" data-toggle="sidebar-show">
      <span class="c-header-toggler-icon"></span>
    </button>
  <% end %>
  <%= link_to root_path, class: "c-header-brand" do %>
    <%= t("layouts.header.brand") %>
  <% end %>
  <ul class="c-header-nav ml-auto mr-4">
    <li class="c-sidebar-nav-item dropdown">
      <a class="c-sidebar-nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        <%= current_user.email %>
        <i class="fas fa-caret-down"></i>
      </a>
      <div class="dropdown-menu dropdown-menu-right">
        <% if current_user.admin? %>
          <%= link_to t("layouts.header.account_menu.admin"), admin_root_path, class: "dropdown-item" %>
        <% end %>
        <%= link_to t("layouts.header.account_menu.profile"), account_profile_path, class: "dropdown-item" %>
        <%= link_to t("layouts.header.account_menu.sign_out"), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </li>
  </ul>
  <% if has_aside? %>
    <button class="c-header-toggler aside-menu-toggler d-md-down-none" type="button" data-toggle="aside-menu-lg-show">
      <span class="c-header-toggler-icon"></span>
    </button>
    <button class="c-header-toggler aside-menu-toggler d-lg-none" type="button" data-toggle="aside-menu-show">
      <span class="c-header-toggler-icon"></span>
    </button>
  <% end %>
  <%= render_breadcrumbs %>
  <%= render_action_bar %>
</header>
